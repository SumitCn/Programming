#include<bits/stdc++.h>
using namespace std;
typedef long long int ll;
int main()
{
    
    int t;
    cin>>t;
    while(t--)
    { vector<char> v[200001];
       int val ;
       cin>>val;
       string s;
       cin>>s;
        int idx=1000;
        v[idx].push_back(s[0]);
        int con=0;
      for(int i=1;i<s.length();i++)
        {
           if((s[i]>='a'&&s[i]<='z')||s[i]=='.')
            { if(con==0)
              { v[idx].push_back(s[i]);
                 con=1;}
              else if(con==1)
                { idx+=2;
                  v[idx].push_back(s[i]);
                  con=0;
                }
            }
            else if(s[i]=='(')
               {idx-=1;con=0;}
            else if(s[i]==')')
              { idx+=1 ; con = 0;
               }
                  
              }
              val+=1000;
              int id=0;
              sort(v[val].begin(),v[val].end());
            for(int i = 0 ;i<v[val].size();i++)
              if(v[val][i]!='.'){id =1;cout<<v[val][i];}
              if(id==0)
               cout<<"Hallelujah!";
      cout<<"\n";
            
            
        }
        
      return 0;
    }

      
